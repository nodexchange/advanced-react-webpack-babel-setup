{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions" : [
      {
          "name" : "client",
          "image": "396484764682.dkr.ecr.eu-west-1.amazonaws.com/impact-ui:latest",
          "hostname": "client",
          "essential": false,
          "memory": 128
      },
      {
          "name" : "server",
          "image": "396484764682.dkr.ecr.eu-west-1.amazonaws.com/impact-api:latest",
          "hostname": "api",
          "essential": false,
          "memory": 128,
          "environment": [
            {
              "name": "API_PORT",
              "value": "3443"
            }
          ]
      },
      {
          "name" : "nginx",
          "image": "396484764682.dkr.ecr.eu-west-1.amazonaws.com/impact-nginx:latest",
          "hostname": "nginx",
          "essential": true,
          "portMappings": [
              {"hostPort": 80, "containerPort": 80}
          ],
          "links": ["client", "server"],
          "memory": 128
      }
  ]
}
